// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                 Int             @id @default(autoincrement())
  name               String
  email              String          @unique
  password           String
  role               String
  unit               String
  mustChangePassword Boolean         @default(false)

  kpis               Kpi[]
  passwordResets     PasswordReset[]
  auditLogs          AuditLog[]
  progressEntries    ProgressEntry[]
}

model Kpi {
  id            Int     @id @default(autoincrement())
  name          String
  description   String
  unitType      String
  periodicity   String
  targetWeekly  Int?
  targetMonthly Int?

  ownerId  Int?
  owner    User?     @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  progresses Progress[]
  entries    ProgressEntry[]
}

model Progress {
  id         Int    @id @default(autoincrement())
  kpiId      Int
  periodType String
  periodKey  String
  delivered  Boolean
  value      String
  comment    String

  kpi Kpi @relation(fields: [kpiId], references: [id], onDelete: Cascade)

  @@unique([kpiId, periodType, periodKey])
}

model ProgressEntry {
  id         Int      @id @default(autoincrement())
  kpiId      Int
  periodType String
  periodKey  String
  delivered  Boolean
  value      String
  comment    String
  createdAt  DateTime @default(now())
  userId     Int?

  kpi   Kpi  @relation(fields: [kpiId], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  details   String
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
