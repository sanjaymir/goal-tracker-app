// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String
  unit     String

  kpis     Kpi[]
}

model Kpi {
  id            Int     @id @default(autoincrement())
  name          String
  description   String
  unitType      String
  periodicity   String
  targetWeekly  Int?
  targetMonthly Int?

  ownerId  Int
  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  progresses Progress[]
}

model Progress {
  id         Int    @id @default(autoincrement())
  kpiId      Int
  periodType String
  periodKey  String
  delivered  Boolean
  value      String
  comment    String

  kpi Kpi @relation(fields: [kpiId], references: [id], onDelete: Cascade)

  @@unique([kpiId, periodType, periodKey])
}
